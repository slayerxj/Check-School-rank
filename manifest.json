{
    "manifest_version": 2,

    "name": "Check school rank",
    "description": "This extension shows how this school is ranked",
    "version": "0.1",

    "browser_action": {
        "default_icon": "xue.gif",
        "default_title": "Check!",
        "default_popup": "popup.html"
    },

    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
      }
    ],

    "permissions": [
        "contextMenus",
        "activeTab"
    ]
}
